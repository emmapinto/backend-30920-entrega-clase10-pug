html
    head
        meta(charset='utf-8')
        title="Mi primera plantilla en PUG!"
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css', integrity='sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l', crossorigin='anonymous')

    body 
        h1=mensaje

        div(class="container mt-3")
            div(class="jumbotron")
                h2(style="color:blue")="Ingrese un producto:"
                form(action="/productos" method="POST") 
                    div(class="form-group")
                        label(for="title")
                        input(
                        type='text'
                        name='title'
                        )
                    div(class="form-group")
                        label(for="price")
                        input(
                        type='text'
                        name='price'
                        )
                    div(class="form-group")
                        label(for="thumbnail")
                        input(
                        type='text'
                        name='thumbnail'
                        )
                    button(class="btn btn-success mt-3 mb-5")="Enviar"

                h2(style="color:crimson;")="Listado de productos:"
                    div(class="table-responsive")
                        table(class="table table-dark")
                            tr(style="color: yellow")
                                th="Nombre del producto"
                                th="Precio"
                                th="Imagen"
                            each prod in ListaProductos
                                tr
                                    td=prod.title
                                    td=prod.price
                                    td
                                        img(src=prod.thumbnail, height=100, width=100)
                          
